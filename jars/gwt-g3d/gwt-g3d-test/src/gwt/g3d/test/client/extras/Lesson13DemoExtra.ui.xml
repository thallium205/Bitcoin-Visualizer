<!-- Lesson13DemoExtra.ui.xml -->

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <g:FlowPanel>
  	<g:CheckBox ui:field='chkLighting' checked='true'>Use lighting</g:CheckBox>
  	<g:CheckBox ui:field='chkPerFragment' checked='true'>Per-fragment lighting</g:CheckBox>
  	<g:CheckBox ui:field='chkTextures' checked='true'>Use textures</g:CheckBox>
  	<g:HTML><h2>Point light:</h2></g:HTML>
    <g:HorizontalPanel>
      <g:HTML width='100px'><b>Location:</b></g:HTML>
      <g:Label>X: </g:Label>
      <g:TextBox width='60px' ui:field='txtPointX'>0.0</g:TextBox>
      <g:Label>Y: </g:Label>
      <g:TextBox width='60px' ui:field='txtPointY'>0.0</g:TextBox>
      <g:Label>Z: </g:Label>
      <g:TextBox width='60px' ui:field='txtPointZ'>-5.0</g:TextBox>
  	</g:HorizontalPanel>
  	<g:HorizontalPanel>
      <g:HTML width='100px'><b>Color:</b></g:HTML>
      <g:Label>R: </g:Label>
      <g:TextBox width='60px' ui:field='txtColorR'>0.8</g:TextBox>
      <g:Label>G: </g:Label>
      <g:TextBox width='60px' ui:field='txtColorG'>0.8</g:TextBox>
      <g:Label>B: </g:Label>
      <g:TextBox width='60px' ui:field='txtColorB'>0.8</g:TextBox>
  	</g:HorizontalPanel>
  	<g:HTML><h2>Ambient light:</h2></g:HTML>
    <g:HorizontalPanel>
      <g:HTML width='100px'><b>Ambient:</b></g:HTML>
      <g:Label>R: </g:Label>
      <g:TextBox width='60px' ui:field='txtAmbientR'>0.2</g:TextBox>
      <g:Label>G: </g:Label>
      <g:TextBox width='60px' ui:field='txtAmbientG'>0.2</g:TextBox>
      <g:Label>B: </g:Label>
      <g:TextBox width='60px' ui:field='txtAmbientB'>0.2</g:TextBox>
  	</g:HorizontalPanel>
  </g:FlowPanel>
</ui:UiBinder>